		<script src="js/jquery-3.0.0.min.js"></script>
		<script>
			$(function() {

				var page = 1;
				var i = 4;
				//向右滑动
				$(".next").click(function() {
					//获取图片列表
					var $v_show = $(".v_content_list");
					//获取图片列表的外层div
					var $v_content = $(".v_content");
					//获取宽度
					var v_width = $v_content.width();
					//获取li的个数
					var len = $v_show.find("li").length;
					//页面个数
					var page_count = Math.ceil(len / i);

					if(!$v_show.is(":animated")) {
						//判断是否到最后一页	
						if(page == page_count) {
							$v_show.animate({
								left: '0px'
							}, "slow");
							page = 1;
						} else {
							$v_show.animate({
								left: '-=' + v_width
							}, "slow");
							page++;
						}
					}
					$(".highlight_tip span").eq((page - 1)).addClass("current")
						.siblings().removeClass("current");

				});
				
				//向左滑动
				$(".prev").click(function() {
					//获取图片列表
					var $v_show = $(".v_content_list");
					//获取图片列表的外层div
					var $v_content = $(".v_content");
					//获取宽度
					var v_width = $v_content.width();
					//获取li的个数
					var len = $v_show.find("li").length;
					//页面个数
					var page_count = Math.ceil(len / i);

					if(!$v_show.is(":animated")) {
						//判断是否到第一页	
						if(page == 1) {
							$v_show.animate({
								left: '-=' + v_width * (page_count - 1)
							}, "slow");
							page = page_count;
						} else {
							$v_show.animate({
								left: '+=' + v_width
							}, "slow");
							page--;
						}
					}
					$(".highlight_tip span").eq((page - 1)).addClass("current")
						.siblings().removeClass("current");
				});
			});
		</script>
