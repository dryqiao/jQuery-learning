			/* v_show style */
			
			.v_show {
				width: 595px;
				margin: 20px 0 1px 60px;
			}
			
			.v_caption {
				height: 35px;
				overflow: hidden;
				background: url(img/btn_cartoon.gif) no-repeat 0 0;
			}
			
			.v_caption h2 {
				float: left;
				width: 84px;
				height: 35px;
				overflow: hidden;
				background: url(img/btn_cartoon.gif) no-repeat;
				text-indent: -9999px;
			}
			
			.v_caption .cartoon {
				background-position: 0 -100px;
			}
			
			.v_caption .variety {
				background-position: -100px -100px;
			}
			
			.highlight_tip {
				display: inline;
				float: left;
				margin: 14px 0 0 10px;
			}
			
			.highlight_tip span {
